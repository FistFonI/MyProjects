<Window x:Class="GroceryStore.Windows.EditProductTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroceryStore.Windows"
        mc:Ignorable="d"
        Title="Магазин"
        MinHeight="300" Height="600" MinWidth="1288" Width="800" 
        Loaded="Window_Loaded"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterOwner" >
    <Grid  RenderTransformOrigin="0.525,0.503">
        <Grid.RowDefinitions>

            <RowDefinition Height="*" />
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
            <RowDefinition Height="*" MinHeight="45"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="*" MinWidth="500"/>
            <ColumnDefinition Width="*" MinWidth="660"/>

        </Grid.ColumnDefinitions>
        <Border CornerRadius="10" 
                 Width="auto" 
                 Height="auto" 
                Grid.RowSpan="8"
                MouseDown="Border_MouseDown" Grid.ColumnSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                    <GradientStop Color="#41518f" Offset="0"/>
                    <GradientStop Color="#2c286c" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Label Foreground="#c2cfff" Content="Укажите способ хранения продукта:" HorizontalAlignment="Left" Margin="44,8,0,1"  VerticalAlignment="Center" FontSize="18" Height="Auto" Width="Auto" Grid.Row="2" Grid.Column="0" />
        <Label Foreground="#c2cfff" Content="Укажите цену продукта:" HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Center" FontSize="18" Height="Auto" Width="Auto" Grid.Row="4" Grid.Column="0" />
        <Label Foreground="#c2cfff" Content="Укажите сорт продукта:" HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Center" FontSize="18" Height="Auto" Width="Auto" Grid.Row="5" Grid.Column="0" />
        <TextBox Name ="AddSortOfProductTB"  Height="Auto" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" MinHeight="40" MinWidth="600" Grid.Row="5" Grid.Column="1" Margin="30,12,30,7"/>
        <TextBox Name ="AddPriceOfProductTB"  Height="Auto"  TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Width="Auto" Grid.Row="4" MinHeight="40" MinWidth="600" Grid.Column="1" Margin="30,12,30,7"/>
        <TextBlock Foreground="#c2cfff" Grid.Row="3" Grid.Column="0" Text="Укажите отдел:" HorizontalAlignment="Left" Margin="44,0,0,0" VerticalAlignment="Center" FontSize="18" Height="Auto" Width="Auto"/>
        <ComboBox FontSize="26" x:Name="DepartmentsCB" Grid.Row="3" Grid.Column="1"  Width="300" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Foreground="#c2cfff" Content="Редактирование" Grid.ColumnSpan="2" HorizontalAlignment="Center" Grid.Column="0" VerticalAlignment="Center"
               FontSize="26" Width="Auto" Grid.Row="0" Height="Auto" />
        <Button Foreground="#c2cfff" Style="{StaticResource downMenuButton}" Background="#5b60c4" x:Name="CancelButton" Content="Выйти без сохранения" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="Auto" 
                Height="Auto" MinHeight="40" MinWidth="400" FontSize="16"  Grid.Column="1" Grid.Row="7" Click="CancelButton_Click"/>
        <Button Foreground="#c2cfff" Style="{StaticResource downMenuButton}" Background="#5b60c4" x:Name="SaveButton" Content="Сохранить изменения" HorizontalAlignment="Center" Height="Auto"  VerticalAlignment="Center" Width="Auto" 
                MinHeight="40" MinWidth="400" FontSize="16" Grid.Column="0" Grid.Row="7" Click="SaveButton_Click"/>
        <Label Foreground="#c2cfff" Content="Укажите название продукта:" HorizontalAlignment="Left" Margin="44,0,0,0" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" 
               FontSize="18" Height="Auto" Width="Auto" />
        <TextBox FontSize="26" Name ="NameOfPruductTB" HorizontalAlignment="Center" Height="Auto" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" 
                 Width="Auto" MinHeight="40" MinWidth="600" Grid.Column="1" Margin="30,12,30,7" />
        <ComboBox FontSize="26" x:Name="AddStorageConditionsCB" Grid.Row="2" Grid.Column="1"  Width="300" Height="40" HorizontalAlignment="Center" VerticalAlignment="Center">
        </ComboBox>
        <Label Foreground="#c2cfff" Content="Укажите срок годности продукта:" HorizontalAlignment="Left" Margin="44,19,0,19" VerticalAlignment="Center" FontSize="18" Height="Auto" Width="Auto" Grid.Row="6" Grid.Column="0" />
        <TextBox FontSize="26" Name ="ShelfLifeTB" HorizontalAlignment="Center" Height="Auto" Grid.Row="6" TextWrapping="Wrap" VerticalAlignment="Center" 
                 Width="Auto" MinHeight="40" MinWidth="600" Grid.Column="1" Margin="30,12,30,7" />
    </Grid>
</Window>

